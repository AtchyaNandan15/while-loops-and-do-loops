#include<iostream>
using namespace std;

main()
{
    string name, oldname;
	int age=0, counter=-1, sum=0, old=-2;
	float average;
	
	do{
		sum = sum +  age;
		counter ++;
		cout<<" Enter a name and you age and to quit type ""quit 0"": ";
		cin>>name;
		cin>>age;
		
	if (old<age) {
	old=age;
	oldname=name;
	}
		
		
	}while(name != "quit");

	
	average = sum/counter;
	cout<<" the average age in your class is "<<average;
	
	
	cout<<" The oldest is " <<oldname<<  " the age is " <<old;
}

	


