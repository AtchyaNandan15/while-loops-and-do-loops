#include <iostream>

using namespace std;

int main()
{
   
   int num1;
   
   do{
     
     cout<<" Guess a number ";
     cin>> num1;
     
     if (num1<100)
     cout<<" The number you entered is under \n "; 
       
     else if (num1>100)  
     cout<<" The number you entered is over \n ";
     
   }
   while(num1!=100);
   cout<<" Congratulations you are correct ";
   
   
}
