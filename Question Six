#include <iostream>

using namespace std;

int main()
{
   
   int num1;
   
   do{
     
     cout<<" Enter a number ";
     cin>> num1;
     
     if (num1<100)
     cout<<" You are under "; 
       
     else if (num1>100)  
     cout<<" You are over ";
     
     else if (num1==100)
     cout<<" You are correct ";
   }
   while(num1==100);
   
   
}
