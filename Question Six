#include <iostream>

using namespace std;

int main()
{
   
   int num1;
   
   do{
     
     cout<<" Enter a number ";
     cin>> num1;
     
     if (num1<100)
     cout<<" You are under \n "; 
       
     else if (num1>100)  
     cout<<" You are over \n ";
     
   }
   while(num1!=100);
   cout<<" you are correct ";
   
   
}
